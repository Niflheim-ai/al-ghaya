# Al-Ghaya LMS Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# ==============================================
# Application Settings
# ==============================================
APP_NAME="Al-Ghaya LMS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/al-ghaya

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=al_ghaya
DB_USERNAME=root
DB_PASSWORD=
DB_TIMEZONE=+08:00

# ==============================================
# PayMongo Payment Gateway
# ==============================================
# Get your API keys from: https://dashboard.paymongo.com/developers

# For DEVELOPMENT/TESTING - use test keys (starts with sk_test_ and pk_test_)
PAYMONGO_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
PAYMONGO_PUBLIC_KEY=pk_test_YOUR_PUBLIC_KEY_HERE
PAYMONGO_TEST_MODE=true

# For PRODUCTION - use live keys (starts with sk_live_ and pk_live_)
# PAYMONGO_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY_HERE
# PAYMONGO_PUBLIC_KEY=pk_live_YOUR_LIVE_PUBLIC_KEY_HERE
# PAYMONGO_TEST_MODE=false

# ==============================================
# Email Configuration (Optional)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@alghaya.com
# SMTP_FROM_NAME="Al-Ghaya LMS"

# ==============================================
# Session Configuration
# ==============================================
SESSION_LIFETIME=1440

# ==============================================
# Security Settings
# ==============================================
# Generate a random 32-character key for production
# APP_KEY=base64:YOUR_RANDOM_32_CHAR_KEY_HERE

# ==============================================
# Feature Flags
# ==============================================
# ENABLE_GAMIFICATION=true
# ENABLE_CERTIFICATES=true
# ENABLE_ANALYTICS=true