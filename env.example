# Al-Ghaya LMS Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# ==============================================
# Application Settings
# ==============================================
APP_NAME="Al-Ghaya LMS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/al-ghaya

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=al_ghaya
DB_USERNAME=root
DB_PASSWORD=
DB_TIMEZONE=+08:00

# ==============================================
# Payment Gateway Configuration
# ==============================================
# Choose your preferred payment provider: paymongo, xendit, or manual
PAYMENT_PROVIDER=xendit

# ---------------------------------------------
# PayMongo (Cards, GCash, PayMaya, QRPh)
# Get keys from: https://dashboard.paymongo.com/developers
# ---------------------------------------------
PAYMONGO_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
PAYMONGO_PUBLIC_KEY=pk_test_YOUR_PUBLIC_KEY_HERE
PAYMONGO_TEST_MODE=true

# ---------------------------------------------
# Xendit (GCash, PayMaya, GrabPay, QR, Cards)
# Get keys from: https://dashboard.xendit.co/settings/developers#api-keys
# RECOMMENDED: More reliable for Filipino payment methods
# ---------------------------------------------
XENDIT_SECRET_KEY=xnd_development_YOUR_SECRET_KEY_HERE
XENDIT_PUBLIC_KEY=xnd_public_development_YOUR_PUBLIC_KEY_HERE
XENDIT_TEST_MODE=true

# ---------------------------------------------
# Manual Bank Transfer (Fallback Option)
# Students will see these details for manual payment
# ---------------------------------------------
BANK_NAME="BDO Unibank"
BANK_ACCOUNT_NAME="Al-Ghaya Learning Management System"
BANK_ACCOUNT_NUMBER="1234-5678-9012"
BANK_TRANSFER_INSTRUCTIONS="Please transfer the enrollment fee to the account above and upload your proof of payment. Enrollment will be activated within 24 hours after verification."

# ==============================================
# Email Configuration (Optional)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@alghaya.com
# SMTP_FROM_NAME="Al-Ghaya LMS"

# ==============================================
# Session Configuration
# ==============================================
SESSION_LIFETIME=1440

# ==============================================
# Security Settings
# ==============================================
# Generate a random 32-character key for production
# APP_KEY=base64:YOUR_RANDOM_32_CHAR_KEY_HERE

# ==============================================
# Feature Flags
# ==============================================
# ENABLE_GAMIFICATION=true
# ENABLE_CERTIFICATES=true
# ENABLE_ANALYTICS=true